\newcommand{\graphicsframe}[4]{
  \begin{frame}
    \frametitle{#1}
    \begin{figure}
      \centering
      \includegraphics[width=#2\textwidth,height=#2\textheight,keepaspectratio]{#3}
      \caption{#4}\label{fig:#3}
    \end{figure}
  \end{frame}
}
\newcommand{\twocol}[2]{
\begin{columns}
  \begin{column}{.5\linewidth}
    #1
  \end{column}
  \begin{column}{.5\linewidth}
    #2
  \end{column}
\end{columns}
}

